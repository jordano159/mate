<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @check.name %>
</p>

<p>
  <strong>חניכים:</strong>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @check.kids.each do |kid|%>
        <tr>
          <td><%= link_to kid.name, kid, class: "btn btn-primary" %></td>
          <td><%= link_to 'עריכה', edit_kid_path(kid), class: "btn btn-warning" %></td>
          <td><%= link_to 'מחיקה', kid, method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>
<%= link_to 'Edit', edit_check_path(@check) %> |
<%= link_to 'Back', checks_path %>
