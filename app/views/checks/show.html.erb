<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @check.name %>
</p>

<p>
  <strong>חניכים:</strong>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @check.kids.each do |kid|%>
        <tr>
          <td><%= link_to kid.name + " " + kid.last_name, kid, class: "btn btn-primary" %></td>
          <td>
            <%= if (@check.attendances & kid.attendances).first.status == 1
              "נוכח/ת"
            else
              "לא נוכח/ת"
            end %></td>
          <td><%= (@check.attendances & kid.attendances).first.cause %></td>
          <td><%= link_to 'עריכה', edit_kid_path(kid), class: "btn btn-warning" %></td>
          <td><%= link_to 'מחיקה', kid, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>
<% if @level == 1 %>
  <%= link_to 'Edit', edit_check_path(@check) %> |
<% end %>
<%= link_to 'Back', checks_path %>
