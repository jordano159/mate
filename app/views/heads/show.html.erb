<p id="notice"><%= notice %></p>

<p>
  <strong>ראש
  <%= @head.name %>
  </strong>
</p>
<p class="btn btn-primary">
  <strong>ציר
  <%= link_to @head.axis.name, @head.axis, :style=>'color:#FFFFFF;' %>
  </strong>
</p>
<p>
  <strong>קבוצות:</strong>
  <div class="table-responsive-lg">
  <table class = "table table-hover">
    <thead class="thead-light">
      <tr>
        <th>שם</th>
        <% if current_staff.admin? %>
          <th>עריכה</th>
          <th>מחיקה </th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @head.groups.each do |group|%>
        <tr>
          <td><%= link_to group.name, group, class: "btn btn-primary" %></td>
          <td><%= link_to 'עריכה', edit_group_path(group), class: "btn btn-warning" if current_staff.admin? %></td>
          <td><%= link_to 'מחיקה', group, method: :delete, class: "btn btn-danger" if current_staff.admin? %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</p>
<p>
  <strong>ראשראשים וראשראשיות:</strong>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @head.staffs.each do |s|%>
        <tr>
          <td class = "btn btn-primary"><%= s.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "יצירת ראשראש.ית חדש.ה", new_head_staff_path(@head) if current_staff.admin? %>
</p>

