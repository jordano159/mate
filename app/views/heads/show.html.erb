<p id="notice"><%= notice %></p>

<p>
  <strong>ראש
  <%= @head.name %>
  </strong>
</p>
<p class="btn btn-primary">
  <strong>ציר
  <%= link_to @head.axis.name, @head.axis, :style=>'color:#FFFFFF;' %>
  </strong>
</p>
<p>
  <strong>קבוצות:</strong>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @head.groups.each do |group|%>
        <tr>
          <td><%= link_to group.name, group, class: "btn btn-primary" %></td>
          <td><%= link_to 'עריכה', edit_group_path(group), class: "btn btn-warning" %></td>
          <td><%= link_to 'מחיקה', group, method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>
<p>
  <strong>ראשראשים וראשראשיות:</strong>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @head.staffs.each do |s|%>
        <tr>
          <td><%= link_to s.name, '#', class: "btn btn-primary" %></td>
          <td><%# link_to 'עריכה', edit_staff_path(s), class: "btn btn-warning" %></td>
          <td><%# link_to 'מחיקה', s, method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>

