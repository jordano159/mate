<script>
    $(document).ready(function() {
       $(".select").select2({
          language: "he",
          theme: "bootstrap"
      }); });
    $.fn.modal.Constructor.prototype.enforceFocus = function() {};
</script>

<%= simple_form_for(@head, html: { class: 'form-inline' }) do |form| %>
  <% if head.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(head.errors.count, "error") %>
        prohibited this head from being saved:
      </h2>
      <ul>
        <% head.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.input :name %>
  </div>
  <div class="field select">
    <%= form.input :axis_id, collection: @axes %>
  </div>
  <div class="field">
    <%= form.input_field :group_ids, as: :select, multiple: "multiple",  input_html: {class: "select"}, collection: Group.all, label_method: :name, value_method: :id %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
