<p id="notice"><%= notice %></p>

<h1>ראשים</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @heads.each do |head| %>
      <tr>
        <td><%= link_to head.name, head, class: "btn btn-primary" %></td>
        <td><%= link_to 'עריכה', edit_head_path(head), class: "btn btn-warning" %></td>
        <td><%= link_to 'מחיקה', head, method: :delete, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'ראש חדש', new_head_path %>
