<p id="notice"><%= notice %></p>

<h2>ציר <%= @axis.name %></h2>

<p>
  <strong>ראשים:</strong>
  <div class="table-responsive">
  <table class = "table table-hover">
    <thead class="thead-light">
      <tr>
        <th>שם</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @axis.heads.each do |head|%>
        <tr>
          <td><%= link_to head.name, head %></td>
          <td><%= link_to 'עריכה', edit_head_path(head), class: "btn btn-warning" %></td>
          <td><%= link_to 'מחיקה', head, method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</p>
<p>
  <strong>רכז.ת הציר:</strong>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @axis.staffs.each do |s|%>
        <tr>
          <% if s.user? %>
            <td class = "btn btn-primary"><%= s.name %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "יצירת רכז.ת ציר חדש.ה", new_axis_staff_path(@axis) %>
</p>

<%= link_to 'עריכה', edit_axis_path(@axis) %> |
<%= link_to 'חזרה לרשימה', axes_path %>
