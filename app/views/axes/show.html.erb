<p id="notice"><%= notice %></p>

<p>
  <strong>ציר
  <%= @axis.name %>
  </strong>
</p>
<p>
  <strong>ראשים:</strong>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @axis.heads.each do |head|%>
        <tr>
          <td><%= link_to head.name, head, class: "btn btn-primary" %></td>
          <td><%= link_to 'עריכה', edit_head_path(head), class: "btn btn-warning" %></td>
          <td><%= link_to 'מחיקה', head, method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>
<p>
  <strong>רכז.ת הציר:</strong>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @axis.staffs.each do |s|%>
        <tr>
          <td><%= link_to s.name, '#', class: "btn btn-primary" %></td>
          <td><%# link_to 'עריכה', edit_staff_path(s), class: "btn btn-warning" %></td>
          <td><%# link_to 'מחיקה', s, method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>

