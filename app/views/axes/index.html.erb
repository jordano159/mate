<p id="notice"><%= notice %></p>

<h1>צירים</h1>

<div class="table-responsive-lg">
<table class = "table table-hover">
  <thead class="thead-light">
    <tr>
      <th>שם</th>
      <th>עריכה</th>
      <th>מחיקה</th>
    </tr>
  </thead>

  <tbody>
    <% @axes.each do |axis| %>
      <tr>
        <td><%= link_to axis.name, axis, class: "btn btn-primary" %></td>
        <td><%= link_to 'עריכה', edit_axis_path(axis), class: "btn btn-warning" %></td>
        <td><%= link_to 'מחיקה', axis, method: :delete, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

