<div class="container" id="con">
   <div class="row">
     <div class="col center-login mx-auto" style="width:500px">
       <div class="card card-signin my-5">
				 <div class="d-flex align-items-center justify-content-center w-100">
					 <%= image_tag "clean-logo.svg", size:"200" %>
				 </div>
         <div class="card-body">
           <h3 class="card-title text-center">המטה</h3>
           <div class="form-signin">
             <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
             <div class="form-label-group">
               <%= f.input_field :username, required: false,id: "user_input", class:"form-control", placeholder: "שם משתמש", autofocus: true, label:false %>
               <label for="user_input">שם משתמש</label>
             </div>

             <div class="form-label-group">
                 <%= f.input_field :password, id: "password_input", class:"form-control" , placeholder: "סיסמה", required: false, label: false %>
               <label for="password_input">סיסמה</label>
             </div>

             <div class="custom-control custom-checkbox mb-3">
               <%= f.input :remember_me, as: :boolean, id: "staff_remember_me", label: "זכור אותי" if devise_mapping.rememberable? %>

               <!-- <label class="custom-control-label" for="customCheck1">זכור אותי</label>
               <input type="checkbox" class="custom-control-input" id="customCheck1"> -->
             </div>
             <button id="submit" class="btn btn-lg btn-primary-cus btn-block text-uppercase card-title" type="submit">כניסה</button>
             <% end %>
             <%# render "devise/shared/links" %>
           </div>
         </div>
       </div>
     </div>
   </div>
 </div>

 <script>
 $( function() {
   $( "#error_btn" ).insertAfter( "#submit" );
 $( "#staff_remember_me" ).checkboxradio();
} );
$(document).ready(function() {
	if (window.innerWidth > 1000) {
		$("#con").addClass("w-50s")
	}
});
 </script>
