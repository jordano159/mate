<h2>כניסה למטה מפעל של השומר הצעיר</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%#= f.input :email, required: false %>
    <%= f.input :username, required: false, autofocus: true, label: "שם משתמש" %>
    <%= f.input :password, required: false, label: "סיסמה" %>
    <%= f.input :remember_me, as: :boolean, label: "_זכור אותי" if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "כניסה" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
