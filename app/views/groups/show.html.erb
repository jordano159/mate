<p id="notice"><%= notice %></p>

<p>
  <strong>קבוצת
  <%= @group.name %>
  </strong>
</p>
<p class="btn btn-primary">
  <strong>ראש
  <%= link_to @group.head.name, @group.head, :style=>'color:#FFFFFF;' %>
  </strong>
</p>
<p>
  <strong>חניכים:</strong>
  <div class="table-responsive-lg">
  <table class = "table table-hover">
    <thead class="thead-light">
      <tr>
        <th>שם</th>
        <th>עריכה</th>
        <th>מחיקה</th>
      </tr>
    </thead>

    <tbody>
      <% @group.kids.each do |kid|%>
        <tr>
          <td><%= link_to kid.name + " " + kid.last_name, kid, class: "btn btn-primary" %></td>
          <td><%= link_to 'עריכה', edit_kid_path(kid), class: "btn btn-warning" %></td>
          <td><%= link_to 'מחיקה', kid, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</p>
<p>
  <strong> מדריכות ומדריכים:</strong>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @group.staffs.each do |s|%>
        <tr>
          <td class = "btn btn-primary"><%= s.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "יצירת מדריך.ה חדש.ה", new_group_staff_path(@group) %> <br>
  <% if @level == 1 %>
    <%= link_to "יצירת נוכחות חדשה", new_check_path %>
  <% end %>
</p>

<%= link_to 'עריכה', edit_group_path(@group) %> |
<%= link_to 'חזרה לרשימה', groups_path %>
