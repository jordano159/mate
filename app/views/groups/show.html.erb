<p>
  <strong>
  <%= @group.name %>
  </strong>
</p>
<p class="btn btn-primary">
  <strong>ראש
  <%= link_to @group.head.name, @group.head, :style=>'color:#FFFFFF;' %>
  </strong>
</p>
<%
counter = 0
@group.kids.each do |kid|
  counter += kid.current_status if kid.current_status
end
 %>
 יש <%= counter %> חניכימות נוכחימות מתוך <%= @group.kids.count %>
<p>
  <strong>חניכים:</strong>
  <div class="table-responsive-lg">
  <table class = "table table-hover">
    <thead class="thead-light">
      <tr>
        <th>שם</th>
        <th>סטטוס עדכני</th>
        <th>סיבה</th>
        <% if current_staff.admin? %>
          <th>עריכה</th>
          <th>מחיקה </th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @group.kids.each do |kid|%>
        <tr>
          <td><%= link_to kid.name + " " + kid.last_name, kid, class: "btn btn-primary" %></td>
          <% if kid.checks.exists? && kid.checks.last.attendances.exists? %>
            <td><%= if kid.current_status == 1
              "נוכח/ת"
            else
              "לא נוכח/ת"
            end %></td>
            <td><%= kid.current_cause %></td>
          <% end %>
          <td><%= link_to 'עריכה', edit_kid_path(kid), class: "btn btn-warning" if current_staff.admin? %></td>
          <td><%= link_to 'מחיקה', kid, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" if current_staff.admin? %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</p>
<p>
  <strong> מדריכות ומדריכים:</strong>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @group.staffs.each do |s|%>
        <tr>
          <td class = "btn btn-primary"><%= s.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "יצירת מדריך.ה חדש.ה", new_group_staff_path(@group), class: "btn btn-primary"  if current_staff.admin? %> <br>
  <%= link_to "יצירת נוכחות חדשה", new_check_path, class: "btn btn-primary" if @level == 1%>
</p>

<%= link_to 'עריכה', edit_group_path(@group), class: "btn btn-primary" if current_staff.admin? %>
<%= link_to 'חזרה לרשימה', groups_path, class: "btn btn-primary" %>
