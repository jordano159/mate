<p id="notice"><%= notice %></p>

<%= form_tag(groups_path, :method => "get", id: "search-form", class: "form-inline my-2 my-lg-0") do %>
<%= text_field_tag :search, params[:search], placeholder: "חיפוש...", class: "form-control mr-sm-2" %>
<%= submit_tag "חיפוש", :name => nil, class: "btn btn-outline-success my-2 my-sm-0" %>
<% end %>

<% if @groups.blank? %>
  <h4>אין קבוצות שתואמות את החיפוש <%= params[:search] %>.</h4>
<% else %>

<h1>קבוצות</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.name, group, class: "btn btn-primary" %></td>
        <td><%= link_to 'עריכה', edit_group_path(group), class: "btn btn-warning" %></td>
        <td><%= link_to 'מחיקה', group, method: :delete, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

<%= link_to 'קבוצה חדשה', new_group_path %>
