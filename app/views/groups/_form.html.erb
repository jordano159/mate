    <% Kid.all.each do |k| %>
       <option value = "<%= k.id %>" ><%=k.name%> <%= k.last_name %></option>
    <% end %>
</select> -->
<%#= select_tag "group[kid_ids]", options_for_select(Kid.all.collect{ |u| [u.name, u.id] }) %>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
