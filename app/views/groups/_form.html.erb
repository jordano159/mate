<script>
    $(document).ready(function() {
       $(".select").select2({
          language: "he",
          theme: "bootstrap"
      }); });
    $.fn.modal.Constructor.prototype.enforceFocus = function() {};
</script>

<%= simple_form_for(@group, html: { class: 'form-inline' }) do |form| %>
  <% if group.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(group.errors.count, "error") %>
        prohibited this group from being saved:
      </h2>
      <ul>
        <% group.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.input :name %>
  </div>
  <div class="field select">
    <%= form.input :head_id, collection: @heads %>
  </div>
  <div class="field select" multiple="multiple">
    <%= form.input :kid_ids, collection: Kid.all %>
  </div>
  <select class="field select" multiple="multiple">
    <% Kid.all.each do |k| %>
       <option><%=k.name%></option>
    <% end %>
</select>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
