<script>
    $(document).ready(function() {
       $(".select").select2({
          language: "he",
          theme: "bootstrap"
      }); });
    $.fn.modal.Constructor.prototype.enforceFocus = function() {};
</script>

<%= simple_form_for(@group, html: { class: 'form-inline' }) do |form| %>
  <% if group.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(group.errors.count, "error") %>
        prohibited this group from being saved:
      </h2>
      <ul>
        <% group.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.input :name %>
  </div>
  <div class="field">
    <%= form.input_field :head_id, collection: @heads, input_html: { class: 'select' } %>
  </div>
  <div class="field">
    <%= form.input_field :kid_ids, as: :select, multiple: "multiple",  input_html: {class: "select"}, collection: Kid.all, label_method: :name, value_method: :id %>
  </div>
