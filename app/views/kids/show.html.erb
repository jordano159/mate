<h1 style="font-weight:bold;color:#0984e3;"><%= @kid.name %> <%= @kid.last_name %></h1>
<br>

<div class="table-responsive kid-info">
<table class = "table table-hover" id="dttb">
  <thead class="thead-dark">
  </thead>

  <tbody>
    <tr>
      <td><%= @level_names[0] %></td>
      <td><%= link_to @kid.group.name, @kid.group if @kid.group %></td>
    </tr>
    <% @kid.mifal.columns.reject { |e| %w(name last_name full_name group status cause).include?(e) }.each do |column| %>
      <tr>
        <td> <%= @column_names[column.to_sym] %> </td>
        <td> <%= @kid.send(column) if @kid.send(column).present? %> </td>
        <% if column == "phone" && mobile_device? %>
          <a href="whatsapp://send?text=<%= " " %>&phone=972<%= @kid.phone %>" data-action="share/whatsapp/share"><i class="fa fa-whatsapp" aria-hidden="true" style="font-size: 30px; color: green;"></i></a>
          <a href="tel:0<%= @kid.phone %>" ><i class="fa fa-phone fa-lg fa-2x"></i></a>
        <% elsif column = "parent_1_phone" && mobile_device? %>
          <a href="whatsapp://send?text=<%= " " %>&parent_1_phone=972<%= @kid.parent_1_phone %>" data-action="share/whatsapp/share"><i class="fa fa-whatsapp" aria-hidden="true" style="font-size: 30px; color: green;"></i></a>
          <a href="tel:0<%= @kid.parent_1_phone %>" ><i class="fa fa-phone fa-lg fa-2x"></i></a>
        <% elsif column = "parent_2_phone" && mobile_device? %>
          <a href="whatsapp://send?text=<%= " " %>&parent_2_phone=972<%= @kid.parent_2_phone %>" data-action="share/whatsapp/share"><i class="fa fa-whatsapp" aria-hidden="true" style="font-size: 30px; color: green;"></i></a>
          <a href="tel:0<%= @kid.parent_2_phone %>" ><i class="fa fa-phone fa-lg fa-2x"></i></a>
        <% end %>
      </tr>
    <% end %>
      <tr>
        <td>סטטוס עדכני</td>
        <td><%= if @kid.status.present?
                  # if @level > 1
                  #   button_to @kid.heb_status, toggle_path, method: :get, params: { value: 1 - @kid.status, id: @kid.id}
                  # else
                    @kid.heb_status
                  # end
                end %></td>
      </tr>
      <tr>
        <td>סיבה</td>
        <td><%= @kid.cause %></td>
      </tr>
      <% if @kid.group %>
        <tr>
          <td><%= @staff_names[1] %></td>
            <% @kid.group.staffs.each do |s|%>
              <td><%= s.name %></td>
            <% end %>
        </tr>
      <% end %>
  </tbody>
</table>
</div>

</div>


<%= link_to 'עריכה', edit_kid_path(@kid), class: "btn btn-warning" if current_staff.admin? || current_staff.vip? %>
<%= link_to 'מחיקה', @kid, method: :delete, data: { confirm: 'את/ה בטוח/ה?' }, class: "btn btn-danger" if current_staff.admin? || current_staff.vip? %>
<%= link_to 'חזרה לרשימה', kids_path, class: "btn btn-primary" %>
