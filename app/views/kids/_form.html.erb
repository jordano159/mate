      <div class="row">
        <% batch.each do | col | %>
        <% if col == "group" %>
        <div class="column ml-2">
          <%= form.input :group_id, collection: @groups, label: "#{@level_names[0]}" %>
        </div>
        <% else %>
        <div class="column ml-2">
          <%= form.input col.to_sym, label: @column_names[col.to_sym] %>
        </div>
        <% end %>
        <% end %>
      </div>
    <% end %>
    <div class="row">
    <% ["shabat", "swim","parents","fever"].each do |col| %>
    <div class="column ml-2">
      <%= form.input col.to_sym, as: :radio_buttons,input_html:{class:"form-inline"}, label: "#{@column_names[col.to_sym]}", collection: ["כן", "לא"] %>
    </div>
    <% end %>
