<%= simple_form_for(@kid, html: { class: 'form-inline' }) do |form| %>
  <% if kid.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(kid.errors.count, "error") %>
        prohibited this kid from being saved:
      </h2>
      <ul>
        <% kid.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.input :name %>
  </div>
  <div class="field">
    <%= form.input :last_name %>
  </div>
  <div class="field">
    <%= form.input :sex %>
  </div>
  <div class="field">
    <%= form.input :phone %>
  </div>
  <div class="field">
    <%= form.input :meds %>
  </div>
  <div class="field">
    <%= form.input :food %>
  </div>
  <div class="field">
    <%= form.input :city %>
  </div>
  <div class="field">
    <%= form.input :ken %>
  </div>
  <div class="field">
    <%= form.input :dad %>
  </div>
  <div class="field">
    <%= form.input :dad_phone %>
  </div>
  <div class="field">
    <%= form.input :mom %>
  </div>
  <div class="field">
    <%= form.input :mom_phone %>
  </div>
  <div class="field">
    <%= form.input :size %>
  </div>
  <div class="field">
    <%= form.input :shabat, as: :radio_buttons, label: "שומר.ת שבת?", collection: ["כן", "לא"] %>
  </div>
  <div class="field">
    <%= form.input :parents, as: :radio_buttons, label: "ההורים באים?", collection: ["כן", "לא"] %>
  <div class="field">
    <%= form.input :swim, as: :radio_buttons, label: "יודע.ת לשחות?", collection: ["כן", "לא"] %>
  </div>
  <div class="field select">
    <%= form.input :group_id, collection: @groups %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
