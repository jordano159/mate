<%= simple_form_for(@kid, html: { class: 'm-3' }) do |form| %>

  <% if kid.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(kid.errors.count, "error") %>
        prohibited this kid from being saved:
      </h2>
      <ul>
        <% kid.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
