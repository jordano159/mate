<%= simple_form_for(@kid, html: { class: 'form-inline' }) do |form| %>
  <% if kid.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(kid.errors.count, "error") %>
        prohibited this kid from being saved:
      </h2>
      <ul>
        <% kid.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="column">
      <%= form.input :name, label: "שם" %>
    </div>
    <div class="column">
      <%= form.input :last_name, label: "שם משפחה" %>
    </div>
    <div class="column">
      <%= form.input :sex, label: "מין" %>
    </div>
    <div class="column">
      <%= form.input :mifal_id, collection: Mifal.all, label: "מפעל" %>
    </div>
  </div>
  <div class="row">
    <div class="column">
      <%= form.input :phone, label: "פלאפון" %>
    </div>
    <div class="column">
      <%= form.input :medical, label: "רגישות ובעיות רפואיות" %>
    </div>
    <div class="column">
      <%= form.input :meds, label: "תרופות" %>
    </div>
  </div>
  <div class="row">
    <div class="column">
      <%= form.input :food, label: "אוכל" %>
    </div>
    <div class="column">
      <%= form.input :city, label: "מקום מגורים" %>
    </div>
    <div class="column">
      <%= form.input :ken, label: "קן מקור" %>
      </div>
  </div>
  <div class="row">
    <div class="column">
      <%= form.input :parent_1, label: "שם הורה 1" %>
    </div>
    <div class="column">
      <%= form.input :parent_1_phone, label: "טלפון הורה 1" %>
    </div>
    <div class="column">
      <%= form.input :parent_2, label: "שם הורה 2" %>
    </div>
  </div>
  <div class="row">
    <div class="column">
      <%= form.input :parent_2_phone, label: "טלפון הורה 2" %>
    </div>
    <div class="column">
      <%= form.input :size, label: "מידת חולצה" %>
    </div>
    <div class="column">
      <%= form.input :exits, label: "כניסות ויציאות" %>
    </div>
  </div>
  <div class="row">
    <div class="column">
      <%= form.input :comments, label: "הערות" %>
    </div>
    <div class="column">
      <%= form.input :group_id, collection: @groups, label: "קבוצה" %>
    </div>
    <div class="column">
      <%= form.input :grade, label: "שכבה" %>
    </div>
    <div class="column">
      <%= form.input :taz, label: "תעודת זהות" %>
    </div>
  </div>
  <div class="row">
    <div class="column">
      <%= form.input :shabat, as: :radio_buttons, label: "שומר.ת שבת?", collection: ["כן", "לא"] %>
    </div>
    <div class="column">
      <%= form.input :parents, as: :radio_buttons, label: "ההורים באים?", collection: ["כן", "לא"] %>
    </div>
    <div class="column">
      <%= form.input :swim, as: :radio_buttons, label: "יודע.ת לשחות?", collection: ["כן", "לא"] %>
    </div>
    <div class="column">
      <%= form.input :status, as: :radio_buttons, label: "סטטוס?", collection: [["לא נוכח/ת", "0"], ["נוכח/ת","1"]]  %>
    </div>
  </div>
    <%= form.submit "עדכון פרטים" %>
<% end %>
