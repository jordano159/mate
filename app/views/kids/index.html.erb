<p id="notice"><%= notice %></p>

<h1>חניכים</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kids.each do |kid| %>
    <tr>
      <td><%= link_to kid.name, kid, class: "btn btn-primary" %></td>
      <td><%= link_to 'עריכה', edit_kid_path(kid), class: "btn btn-warning" %></td>
      <td><%= link_to 'מחיקה', kid, method: :delete, class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'חניך.ה חדש.ה', new_kid_path %>
