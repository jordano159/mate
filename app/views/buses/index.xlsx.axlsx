wb = xlsx_package.workbook
@buses.each do |bus|
  wb.add_worksheet(name: bus.name ) do |sheet|
    sheet.add_row ['שם מלא', 'טלפון', 'קן', 'ישוב', 'כניסות ויציאות', 'סטטוס', 'סיבה']
    bus.kids.each do |kid|
      attributes = [kid.full_name, kid.phone, kid.ken, kid.city, kid.exits, kid.heb_status, kid.cause]
      sheet.add_row attributes
    end
  end
end
