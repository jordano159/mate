<h2><%= @mifal.name %></h2>

<div class="table-responsive">
  <table class="nowrap table table-hover" id="dttb-axes"
                data-sort="false" data-source="<%= url_for(controller: 'axes', format: :json, mifal_id: @mifal.id)%>">
    <thead class="thead-dark">
      <tr>
        <th data-data="name">שם</th>
        <th data-data="axis_counter" data-orderable="false" data-searchable="false">נוכחות</th>
        <th data-data="url" data-orderable="false" data-class-name="all" data-searchable="false" class="skip-export" width="100px"></th>
      </tr>
    </thead>

  </table>
</div>

<% if @level == 4 %>
<p>
  סה"כ:
  <strong class="total"></strong> מתוך <strong><%= @mifal.kids.count %></strong>
</p>
<% end %>

<script>
  $(document).ready(function(){
  var x = 0;
  setTimeout(function(){
    $(".for_sum").each(function(){
    x += Number($(this).text());
    })
    $(".total").html(x);
   }, 1000);
  });
</script>


<strong>רכז.ת המפעל:</strong>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @mifal.staffs.each do |s|%>
        <tr>
          <td><%= s.name if s.admin? || s.vip? %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%# link_to "יצירת רכז.ת מפעל חדש.ה", new_mifal_staff_path(@mifal), class: "btn btn-primary" if current_staff.admin? %>
<%= link_to 'עריכה', edit_mifal_path(@mifal), class: "btn btn-primary" if current_staff.admin? %>
<%= link_to 'ייצוא', mifal_path(format: :xlsx), class: 'btn btn-primary' if current_staff.admin? || current_staff.vip? %>
<%= link_to 'חזרה לרשימה', mifals_path, class: "btn btn-primary" %>
