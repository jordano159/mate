<h2 class="font-weight-bold"><%= @mifal.name %>
  <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_mifal_path(@mifal), class: "text-muted icon-size" if current_staff.admin? %>
  <%= link_to "<i class='fas fa-download'></i>".html_safe, mifal_path(format: :xlsx), class: 'p-2 icon-size text-dark' if current_staff.admin? || current_staff.vip? %>
</h2>
<%= link_to 'חזרה לרשימה', mifals_path, class: "btn btn-primary" if current_staff.admin? %>


<% if @level == 4 %>
<p>
  סה"כ:
  <strong class="total"></strong> מתוך <strong><%= @mifal.kids.count %></strong>
</p>
<% end %>
<div class="table-responsive">
  <table class="nowrap table table-hover" id="dttb-axes"
                data-sort="false" data-source="<%= url_for(controller: 'axes', format: :json, mifal_id: @mifal.id)%>">
    <thead class="thead-dark">
      <tr>
        <th data-data="name">שם</th>
        <th data-data="axis_counter" data-orderable="false" data-searchable="false">נוכחות</th>
        <th data-data="url" data-orderable="false" data-class-name="all" data-searchable="false" class="skip-export" width="100px"></th>
      </tr>
    </thead>

  </table>
</div>


<script>
  $(document).ready(function(){
  var x = 0;
  setTimeout(function(){
    $(".for_sum").each(function(){
    x += Number($(this).text());
    })
    $(".total").html(x);
   }, 1000);
  });
</script>

