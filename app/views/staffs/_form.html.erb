<%= simple_form_for([@staffable, @staff], html: { class: 'fodrm-inline' }) do |form| %>
<%= form.error_notification %>

  <div class="form-inputs">
    <!-- <div class="form-inputs"> -->
    <%= form.input :name, label:"שם", required: true %>
    <%= form.input :email, required: true, autofocus: true, label: "מייל" %>
    <%= form.input :username, required: true, label: "שם משתמש" %>
    <%= form.input :phone, label: "מספר טלפון", as: :tel %>
    <%= form.input :role, collection: ["user", "vip", "admin"], label: "תפקיד" if current_staff.admin? %>
    <%= form.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: "סיסמה" %>
    <%= form.input :password_confirmation, required: true, label: "אימות סיסמה" %>
  </div>
  <!-- <div class="actions"> -->
  <div class="form-actions">
    <%# form.submit %>
    <%= form.button :submit, "עדכון", class:"btn btn-primary-cus" %>
    <%# link_to "מחיקת המשתמש", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
  </div>
<% end %>
