<% if staff_signed_in? %>
  <div class="dropdown user-position">
    <button type="button" class="dropdown-toggle btn btn-light bg-transparent border-white" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <div class="badge badge-pill btn-primary-cus-outline">
      <% case @level %>
      <% when 1 %>
      <%= @staff_names[0] %>
      <% when 2 %>
      <%= @staff_names[2] %>
      <% when 3 %>
      <%= @staff_names[4] %>
      <% when 4 %>
      <%= "רכז/ת מפעל" %>
      <% end %>
    </div>
  <span class="text-muted"> שלום, <%= current_staff.name %> <i class="fas fa-chevron-down"></i></span>

    </button>
    <div class="dropdown-menu dropdown-menu-right">

      <div class="font-weight-bold dropdown-element" >
        שלום <%= current_staff.name %> <br>
      </div>
      <div class="dropdown-element">
        <%= link_to "עריכת משתמש", edit_staff_registration_path %>

      </div>
      <div class="dropdown-element">
        <% case @level %>
        <% when 1 %>
        <%= link_to "עריכת שם ה#{@level_names[0]}", edit_group_path(current_staff.staffable.id) %>
        <% when 2 %>
        <%= link_to "עריכת שם ה#{@level_names[2]}", edit_head_path(current_staff.staffable.id)%>
        <% when 3 %>
        <%= link_to "עריכת שם ה#{@level_names[4]}", edit_axis_path(current_staff.staffable.id)%>
        <% when 4 %>
        <%= link_to "עריכת שם המפעל", edit_mifal_path(current_staff.staffable.id)%>
        <% end %>
      </div>
      <div class="dropdown-element">
        <%= link_to "התנתקות", destroy_staff_session_path, method: :delete%>
      </div>
      <div class="dropdown-element">
        <%= error_btn %>
      </div>
    </div>
  </div>
<% end %>
