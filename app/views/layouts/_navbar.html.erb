<% if staff_signed_in? %>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark" id="navbar">
  <%= link_to "מטה", root_path, class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav">
      <li class="nav-item ">
        <%= link_to "בית", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "כל החניכות", kids_path, class: "nav-link" %>
      </li>
      <% if @level == 2 %>
        <li class="nav-item ">
          <%= link_to "ה#{ @level_names[1] } שלי", root_path, class: "nav-link" %>
        </li>
      <% end %>
      <li class="nav-item ">
        <%= link_to "נוכחויות", checks_path, class: "nav-link" %>
      </li>
      <% if current_staff.admin? %>
        <li class="nav-item ">
          <%= link_to "כל המשתמשים", staffs_path, class: "nav-link" %>
        </li>
        <li class="nav-item ">
          <%= link_to "מפעלים", mifals_path, class: "nav-link" %>
        </li>
      <% end %>
      <% if current_staff.admin? || current_staff.vip? %>
      <% if current_staff.admin? || current_staff.staffable.has_axes %>
      <li class="nav-item ">
        <%= link_to "#{@level_names[5]}", axes_path, class: "nav-link" %>
      </li>
      <% end %>
      <li class="nav-item ">
        <%= link_to "#{@level_names[3]}", heads_path, class: "nav-link" %>
      </li>
      <li class="nav-item ">
        <%= link_to "#{ @level_names[1] }", groups_path, class: "nav-link" %>
      </li>
      <% if current_staff.admin? || current_staff.staffable.has_buses %>
          <li class="nav-item ">
            <%= link_to "אוטובוסים", buses_path, class: "nav-link" %>
          </li>
      <% end %>
      <% end %>
      <% if current_staff.admin? || (current_staff.vip? && current_staff.staffable.has_events) %>
      <li class="nav-item ">
        <%= link_to "יומן אירועים", events_path, class: "nav-link" %>
      </li>
      <% end %>
      <% if current_staff.vip? %>
      <li class="nav-item ">
        <%= link_to "אשף יצירת מפעל", mifal_steps_path, class: "nav-link" %>
      </li>
      <% end %>
          <li class="nav-item ">
            <%= link_to "עריכת משתמש", edit_staff_registration_path, class: "nav-link" %>
          </li>
          <% case @level
            when 1 %>
              <li class="nav-item ">
                <%= link_to "עריכת שם ה#{@level_names[0]}", edit_group_path(current_staff.staffable.id), class: "nav-link" %>
              </li>
            <% when 2 %>
              <li class="nav-item ">
                <%= link_to "עריכת שם ה#{@level_names[2]}", edit_head_path(current_staff.staffable.id), class: "nav-link" %>
              </li>
            <% when 3 %>
              <li class="nav-item ">
                <%= link_to "עריכת שם הציר", edit_axis_path(current_staff.staffable.id), class: "nav-link" %>
              </li>
            <% when 4 %>
              <li class="nav-item ">
                <%= link_to "עריכת שם המפעל", edit_mifal_path(current_staff.staffable.id), class: "nav-link" %>
              </li>
          <% end %>
          <li class="nav-item ">
            <%= link_to "התנתקות", destroy_staff_session_path, method: :delete, class: "nav-link" %>
          </li>
        </ul>
        <span class="navbar-text">
          שלום <%= current_staff.name %>
        </span>
  </div>
</nav>
<% end %>
